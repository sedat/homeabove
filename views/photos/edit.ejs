<% include ../partials/header %>

<div class="ui container main text segment">
    <form class="ui form" action="/photos/<%= photo._id %>?_method=PUT" method="POST">
      <div class="field">
        <label>Title</label>
        <input type="text" name="photo[title]" value="<%= photo.title %>">
      </div>
      <div class="field">
        <label>Image</label>
        <input type="text" name="photo[image]" value="<%= photo.image %>">
      </div>
      <div class="field">
        <label>Publisher</label>
        <input type="text" name="photo[publisher]" value="<%= photo.publisher %>">
      </div>
      <div class="field">
          <label>Content</label>
          <textarea name="photo[body]"><%= photo.body %></textarea>
      </div>
      <button class="ui blue basic button" type="submit">Submit</button>
</form>
</div>

<% include ../partials/footer %>